# Closes bspwm.
super + shift + q
    pkill bar && bspc quit

# Closes the focused window.
super + shift + x
    bspc window -c

super + ctrl + shift + x
    bspc window -k

super + t
    bspc desktop -l next

super + b
    bspc desktop -B

super + {s,f}
    bspc window -t {floating,fullscreen}

super + {grave,Tab}
    bspc {window,desktop} -f last

super + apostrophe
    bspc window -s last

super + y
    bspc window -w last.manual

super + m
    bspc window -s biggest

# Select or move a window
super + {_,shift + }{h,j,k,l}
    bspc window -{f,s} {left,down,up,right}

super + {_,shift + }c
    bspc window -f {next,prev}

super + {comma,period}
    bspc desktop -C {backward,forward}

super + bracket{left,right}
    bspc desktop -f {prev,next}

# Preselect window for splitting
super + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
    bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
    bspc window -e {left,down,up,right} push

super + alt + shift + {h,j,k,l}
    bspc window -e {right,up,down,left} pull

super + ctrl + {1-9}
    bspc window -r 0.{1-9}

super + {_,shift + }{1-5}
    bspc {desktop -f,window -d} {^1, ^2, ^3, ^4, ^5}

# Focuses on a window via mouseover.
~button1
    bspc pointer -g focus

# Moves or resizes a window.
super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

# Spawns a terminal.
super + shift + Return
    urxvt

# Toggles a window between floating and tiled.
super + ctrl + Return
    bspc window -t floating

# Opens dwb.
super + shift + d
    dwb

# Opens steam.
super + shift + s
    steam

# Opens mumble.
super + shift + m
    mumble

# Opens firefox.
super + shift + f
    firefox

# Decreases the LCD backlight.
super + F5
    xbacklight -dec 20

# Increases the LCD backlight.
super + F6
    xbacklight -inc 20

# Turns off the LCD backlight.
super + F7
    sleep 1 && xset dpms force off

# Toggle the playback on MPD.
super + F10
    mpc toggle

# Decreases the master volume.
super + F11
    amixer -c 0 set Master 5- unmute

# Increases the master volume.
super + F12
    amixer -c 0 set Master 5+ unmute

# Reloads sxhkd
super + Escape
    pkill -USR1 -x sxhkd
