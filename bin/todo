#!/bin/sh

file="$HOME/.todo.fnks"
temp="$HOME/.todo_.fnks"

arg=$@

if [[ ! -f $file ]] ; then
    echo "" >> $file
fi


case $1 in
    "")
    echo ">> List of stuff to do:" > $temp
    echo "*-------------------------*" >> $temp
    awk '{ print NR ". " $0 }' $file >> $temp
    vimcat $temp
    rm $temp
    ;;
    e)
    vim $file
    ;;
    r)
    sed "$2d" $file > $temp
    mv $temp $file
    ;;
    *)
    echo $arg >> $file
    ;;
esac

exit 0
