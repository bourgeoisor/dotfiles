#!/bin/sh

export DISPLAY=:0.0
export HOME=/home/finiks
export XAUTHORITY=$HOME/.Xauthority

WKSTATUS=$(/home/finiks/dotfiles/bin/wanikanistatus)

if [ ! -z "$WKSTATUS" ]; then
    /usr/bin/notify-send -u normal "Wanikani" "$WKSTATUS"
fi

GMAILSTATUS=$(/home/finiks/dotfiles/bin/gmailstatus)

if [ ! -z "$GMAILSTATUS" ]; then
    /usr/bin/notify-send -u normal "Gmail" "$GMAILSTATUS"
fi
